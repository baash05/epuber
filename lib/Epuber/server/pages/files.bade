
+page(title: 'Files', header_id: 'files')
	#content
		- file_resolver.files_of.each do |file|
			p.file
				- href = "/files/#{pretty_path(file)}"
				- unless file.file_request.nil?
					a.source_pattern(href: href)= file.file_request.source_pattern
					= ' '
					span.arrow =>
					= '  '
				- end

				a.source_path(href: href)= pretty_path(file)
		- end
