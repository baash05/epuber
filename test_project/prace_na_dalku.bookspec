
Epuber::Book::Book.new do |book|

  book.title = 'Práce na dálku'
  book.subtitle = 'Zn.: Kancelář zbytečná'
  book.authors = [
    'Jason Fried',
    'David Heinemeier Hansson'
  ]

  book.language = 'cs'
  book.print_isbn = '978-80-87270-98-0'
  book.isbn = '978-80-87270-98-2'
  book.published = '2014-06-10'

  book.version = '1.0.1'
  book.build_version = '5'
  book.output_base_name = 'prace_na_dalku'

  book.cover_image = 'cover'

  book.target :ibooks do |ibooks|
    ibooks.epub_version = 3.0
  end

  book.target :wooky do |wooky|
    wooky.epub_version = 2.0
    wooky.isbn = '978-80-87270-98-3'
  end

  book.add_file 'prace_na_dalku.css'
  book.add_files '*.{png,jpg,jpeg}'
  book.add_files '*.{otf,ttf}'

  book.toc do |toc|
    toc.file 'cover', :landmark_cover, :landmark_start_page
    toc.file 'vakat'

    toc.file 'copyright', :landmark_copyright

    toc.file 'toc', :landmark_toc

    toc.file 's01', 'NADEŠEL ČAS PRO PRÁCI NA DÁLKU' do
      toc.file 's01ch01'
      toc.file 's01ch02'
      toc.file 's01ch03'
    end

    toc.file 's02', 'JAK NA VÝMLUVY' do
      toc.file 's02ch01'
      toc.file 's02ch02'
      toc.file 's02ch03'
    end

    toc.file 's03', 'JAK SPOLUPRACOVAT NA DÁLKU' do
      toc.file 's03ch01'
      toc.file 's03ch02'
      toc.file 's03ch03'
    end

    toc.file 'appendix'

    toc.file 'footnotes', linear: false
  end
end
